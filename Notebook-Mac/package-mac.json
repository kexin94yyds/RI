{
  "name": "ri-notebook-mac",
  "version": "1.0.0",
  "description": "RI Notebook for Mac",
  "main": "electron-mac.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --enable-logging",
    "build": "electron-builder --mac"
  },
  "build": {
    "appId": "com.ri.notebook",
    "productName": "RI-笔记",
    "mac": {
      "category": "public.app-category.productivity",
      "icon": "RI.png",
      "target": ["dmg", "zip"]
    },
    "files": [
      "**/*",
      "!package-mac.json",
      "!start-mac.sh"
    ]
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^26.0.12"
  },
  "dependencies": {
    "dexie": "^4.2.1",
    "electron-store": "^8.1.0"
  }
}
