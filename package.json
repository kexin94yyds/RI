{
  "name": "replace-information",
  "version": "2.1.0",
  "description": "Replace-Information - 信息置换工具",
  "main": "electron-main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --enable-logging",
    "build": "electron-builder",
    "build:mac": "electron-builder --mac",
    "build:win": "electron-builder --win",
    "build:linux": "electron-builder --linux"
  },
  "keywords": [
    "electron",
    "replace",
    "information",
    "clipboard"
  ],
  "author": "",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "https://github.com/kexin94yyds/RI.git"
  },
  "build": {
    "appId": "com.replaceinfo.app",
    "productName": "Replace-Information",
    "files": [
      "**/*",
      "!src-tauri/**/*",
      "!*.md",
      "!.git/**/*",
      "!dist/**/*"
    ],
    "publish": {
      "provider": "github",
      "owner": "kexin94yyds",
      "repo": "RI",
      "releaseType": "release"
    },
    "mac": {
      "category": "public.app-category.productivity",
      "icon": "RI.png",
      "target": [
        "dmg",
        "zip"
      ],
      "hardenedRuntime": true,
      "gatekeeperAssess": false
    },
    "dmg": {
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "win": {
      "icon": "RI.png",
      "target": [
        "nsis",
        "portable"
      ]
    },
    "linux": {
      "icon": "RI.png",
      "target": [
        "AppImage",
        "deb"
      ]
    }
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^26.0.12"
  },
  "dependencies": {
    "dexie": "^4.2.1",
    "electron-store": "^8.1.0",
    "electron-updater": "^6.6.2"
  }
}
